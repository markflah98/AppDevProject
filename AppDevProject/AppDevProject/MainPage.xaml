<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppDevProject"
             x:Class="AppDevProject.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
      <Label Text="Welcome to Xamarin.Forms!" HorizontalOptions="Center" x:Name="lblMessage" VerticalOptions="CenterAndExpand"/>
      <Button Text="Click Me" x:Name="btnChangeLabel" Clicked="btnChangeLabel_Clicked"/>
      <Entry HorizontalOptions="Center" x:Name="entryUsername" Placeholder="Enter Your Name Here"/>
    </StackLayout>

</ContentPage>
